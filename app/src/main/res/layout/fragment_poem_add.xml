<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            xmlns:android="http://schemas.android.com/apk/res/android">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
        >


            <EditText
                    android:id="@+id/poem_title"
                    android:hint="Enter Your Poem Title"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:paddingLeft="8dp"
                    android:background="@drawable/poem_edit_text"
                    android:layout_marginLeft="4dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginRight="4dp"
                    android:layout_marginBottom="8dp"/>

            <EditText
                    android:id="@+id/poem_context"
                    android:paddingLeft="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minLines="6"
                    android:maxLines="10"
                    android:background="@drawable/poem_edit_text"
                    android:hint="Description"
                    android:gravity="top"
                    android:scrollbars="vertical"
                    android:inputType="textCapSentences|textNoSuggestions|textMultiLine"
                    android:layout_marginLeft="4dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginRight="4dp"
                    android:layout_marginBottom="8dp"
                    />

            <EditText
                    android:hint="Enter A Writer"
                    android:background="@drawable/poem_edit_text"
                    android:paddingLeft="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:id="@+id/poem_writer"
                    android:layout_marginLeft="4dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginRight="4dp"
                    android:layout_marginBottom="8dp"/>
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/poem_writer"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="8dp"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="8dp">
                <Button
                        android:text="Cancel"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/cancel_poem"
                        android:layout_weight="1"/>
                <Button
                        android:text="Save"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/save_poem"
                        android:layout_weight="1"/>


            </LinearLayout>

        </LinearLayout>

</ScrollView>
